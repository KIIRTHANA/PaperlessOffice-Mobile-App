<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hexageeks.daftar.views.LoginPage"
    android:focusableInTouchMode="true">


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/teabackground">

            <Button
                android:id="@+id/icon_button"
                android:layout_width="253dp"
                android:layout_height="63dp"
                android:layout_margin="100dp"
                android:background="@drawable/logo_transparent"
                android:paddingLeft="@dimen/text_20"
                android:paddingRight="34" />
        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha=".4"
            android:background="@drawable/ic_background"
            android:visibility="visible">

        </FrameLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_16"
                android:layout_marginTop="@dimen/margin_top_16"
                android:layout_marginRight="@dimen/margin_right_16"
                android:layout_marginBottom="@dimen/margin_bottom_16"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/wt_logo" />

                <EditText
                    android:id="@+id/username"
                    style="@style/Font_family_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_right_16"
                    android:layout_marginTop="@dimen/margin_top_8"
                    android:layout_marginRight="@dimen/margin_right_16"
                    android:layout_marginBottom="@dimen/margin_top_8"
                    android:background="#B2DBB3"
                    android:drawablePadding="@dimen/padding_16"
                    android:hint="User Name"
                    android:inputType="text"
                    android:maxLength="30"
                    android:maxLines="1"
                    android:padding="@dimen/padding_16"
                    android:textColor="#0C0B0B"
                    android:textColorHint="#141010"
                    android:textSize="@dimen/text_20" />


                <EditText
                    android:id="@+id/password"
                    style="@style/Font_family_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_right_16"
                    android:layout_marginTop="@dimen/margin_top_8"
                    android:layout_marginRight="@dimen/margin_right_16"
                    android:layout_marginBottom="@dimen/margin_top_8"
                    android:background="#BFEBC1"
                    android:backgroundTint="#0A313131"
                    android:drawableLeft="@drawable/password"
                    android:drawablePadding="@dimen/padding_16"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:padding="@dimen/padding_16"
                    android:textColor="#09090A"
                    android:textColorHint="#1B1A1A"
                    android:textSize="@dimen/text_20" />


                <Button
                    android:id="@+id/login"
                    style="@style/Font_family_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_right_16"
                    android:layout_marginTop="@dimen/margin_top_8"
                    android:layout_marginRight="@dimen/margin_right_16"
                    android:layout_marginBottom="@dimen/margin_top_8"
                    android:background="#5DDB62"
                    android:text="LOGIN"
                    android:textColor="#040405"
                    android:textSize="@dimen/text_20" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_16"
                    android:layout_marginTop="@dimen/margin_top_16"
                    android:layout_marginRight="@dimen/margin_right_16"
                    android:layout_marginBottom="@dimen/margin_bottom_16"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="161dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_16"
                        android:layout_marginRight="@dimen/margin_right_16"
                        android:layout_marginBottom="@dimen/margin_bottom_8"
                        android:layout_weight="1"
                        android:background="#4CAF50"
                        android:fontFamily="sans-serif-regular"
                        android:gravity="start"
                        android:paddingTop="@dimen/padding_16"
                        android:paddingBottom="@dimen/padding_16"
                        android:text="Create Account"
                        android:textAlignment="center"
                        android:textColor="#0C0B0B"
                        android:textSize="@dimen/text_20" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_16"
                        android:layout_marginRight="@dimen/margin_right_16"
                        android:layout_marginBottom="@dimen/margin_bottom_8"
                        android:layout_weight="1"
                        android:background="#9DA29D"
                        android:fontFamily="sans-serif-regular"
                        android:gravity="end"
                        android:paddingTop="@dimen/padding_16"
                        android:paddingBottom="@dimen/padding_16"
                        android:text="Need Help?"
                        android:textColor="#E7DFDF"
                        android:textSize="@dimen/text_20"
                        android:visibility="invisible" />


                </LinearLayout>

                <ProgressBar
                    android:id="@+id/loading"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>